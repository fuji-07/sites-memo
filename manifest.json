{
    "manifest_version": 3,
    "name": "sitememo",
    "description": "Pastes notes on the web",
    "version": "1.0",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "memo/memo.js",
                "content.js"
            ],
            "css":[
                "memo/memo.css"
            ]
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}